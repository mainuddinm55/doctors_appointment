{
  "name": "mainuddinm55/doctors_appointment",
  "description": "---",
  "keywords": [],
  "type": "project",
  "autoload": {
    "psr-4": {
      "DoctorAppointment\\": "src/"
    }
  },
  "require": {
    "php": "7.1.33",
    "ext-bcmath": "*",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5",
    "friendsofphp/php-cs-fixer": "2.16"
  },
  "config": {
    "sort-packages": true,
    "bin-dir": "bin"
  },
  "scripts": {
    "dump": "composer dump-autoload -o",
    "phpunit": "phpunit",
    "fix-cs": "php-cs-fixer fix",
    "test-cs": "php-cs-fixer fix --dry-run -v",
    "test": [
      "@phpunit",
      "@test-cs"
    ]
  }
}